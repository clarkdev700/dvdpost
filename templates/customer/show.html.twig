{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Customer_id</th>
                <td>{{ customer.customerId }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ customer.surname }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ customer.firstName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ customer.telephone }}</td>
            </tr>
            <tr>
                <th>Addresse</th>
                <td>{{ customer.addresse }}</td>
            </tr>
            <tr>
                <th>Inscription_date</th>
                <td>{{ customer.inscriptionDate ? customer.inscriptionDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ customer.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customer_index') }}">back to list</a>

    <a href="{{ path('customer_edit', {'customer_id': customer.customer_id}) }}">edit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
