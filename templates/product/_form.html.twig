
<div class="col-sm-11">
	{{ form_start(form) }}
	    <div class="my-custom-class-for-errors">
	        {{ form_errors(form) }}
	    </div>
	    <div class="form-row">
	      <div class="col-sm-5">
			<div class="form-group">
				{{ form_label(form.title, 'Titre') }} 
				{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_label(form.publication_date, 'Date publication') }} 
				{{ form_widget(form.publication_date, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_label(form.qte, 'Quantité') }} 
				<div class="col-sm-4">
				  {{ form_widget(form.qte, {'attr': {'class': 'form-control col-xs-3'}}) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.duration, 'Durée') }}
				<div class="col-sm-4">
				 {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.icone, 'Poster') }} 
				{{ form_widget(form.icone, {'attr': {'class': 'form-control'}}) }}
				{% if (product.icone) %}
				   <!-- <img src="{{ asset('img/gallery/'~ product.icone) }}"/> -->
				   <a href="{{ asset('img/gallery/'~ product.icone) }}" target="_blank">{{product.icone}}</a>
				{% endif %}
			</div>														      
	      </div>
	      <div class="col-sm-1"></div>
	      <div class="col-sm-4">
			<div class="form-group">
				{{ form_label(form.category, 'Genre') }} 
				{{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_label(form.producer, 'Réalisateur') }} 
				{{ form_widget(form.producer, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_label(form.actor, 'Acteurs') }} 
				<select id="product_actor"  name="product[actor][]" class="form-control" required="required" multiple="multiple">
				  {% for actor in form.actor.vars.choices %}
				  <option 
				  value="{{actor.value}}" 
				  {% if (actors|length > 0 and actor.value in actors) %} 
				    selected
				  {% endif %}>
				  {{actor.label}}
				  </option>
				  {% endfor %}
				</select>
				{#{ form_widget(form.actor, {'attr': {'class': 'form-control'}}) }#}
			</div>
			<div class="form-group">
				{{ form_label(form.description, 'Description') }} 
				{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
			</div>								      
	      </div>
	    </div>
												
		<div class="form-group">
			<button class="btn btn-primary">Valider</button>
		</div> 		 		 
	{{ form_end(form, {render_rest: false}) }}
</div>