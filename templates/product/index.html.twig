{% extends 'back.html.twig' %}

{% block title %}Liste des Films {% endblock %}
{% block ctitle %}Liste des Films {%endblock%}

{% block content %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date publication</th>
                <th>Qte</th>
                <th>Durée</th>
                <th>Icone</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.productid }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.publicationDate ? product.publicationDate|date('Y-m-d') : '' }}</td>
                <td>{{ product.qte }}</td>
                <td>{{ product.duration }}</td>
                <td>{{ product.icone }}</td>
                <td>{{ product.status }}</td>
                <td>
                    <a href="{{ path('product_show', {'product_id': product.productid}) }}">show</a>
                    <a href="{{ path('product_edit', {'product_id': product.productid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun Film trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Nouveau</a>
{% endblock %}
