{% extends 'back.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Product_id</th>
                <td>{{ product.productId }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Publication_date</th>
                <td>{{ product.publicationDate ? product.publicationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Qte</th>
                <td>{{ product.qte }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ product.duration }}</td>
            </tr>
            <tr>
                <th>Icone</th>
                <td>{{ product.icone }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'product_id': product.product_id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
