{% extends 'base.html.twig' %}

{% block title %}Home page{% endblock %}

{% block content %}
	<!-- home -->
	<section class="home">
		<!-- home bg -->
		<div class="owl-carousel home__bg">
			<div class="item home__cover" data-bg="img/home/home__bg.jpg"></div>
			<div class="item home__cover" data-bg="img/home/home__bg2.jpg"></div>
			<div class="item home__cover" data-bg="img/home/home__bg3.jpg"></div>
			<div class="item home__cover" data-bg="img/home/home__bg4.jpg"></div>
		</div>
		<!-- end home bg -->

		<div class="container">
			<div class="row">
				<div class="col-12">
					<h1 class="home__title"><b>Nouveaut&eacute;</b></h1>

					<button class="home__nav home__nav--prev" type="button">
						<i class="icon ion-ios-arrow-round-back"></i>
					</button>
					<button class="home__nav home__nav--next" type="button">
						<i class="icon ion-ios-arrow-round-forward"></i>
					</button>
				</div>

				<div class="col-12">
					<div class="owl-carousel home__carousel">
					    {% for product in products %}
						<div class="item">
							<!-- card -->
							<div class="card card--big">
								<div class="card__cover">
									<img src="{{asset('img/gallery/'~product.icone)}}" alt="">
									<a href="#" class="card__play">
										<i class="icon ion-ios-play"></i>
									</a>
								</div>
								<div class="card__content">
									<h3 class="card__title">
									<a href="{{path('product_show',{'product_id':product.productid})}}">{{ product.title }}</a>
									</h3>
									<span class="card__category">
										<a href="#">{{ product.category.label }}</a>
									</span>
								</div>
							</div>
							<!-- end card -->
						</div>							
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- end home -->

	<!-- content -->
	<section class="content">
		<div class="content__head">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<!-- content title -->
						<h2 class="content__title">CATALOGUE</h2>
						<!-- end content title -->
					</div>
				</div>
			</div>
		</div>

		<div class="container">
			<!-- content tabs -->
			<div class="tab-content" id="myTabContent">
				<div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="1-tab">
					<div class="row">
						<!-- card -->
						{% for movie in movies %}
							<div class="col-6 col-sm-12 col-lg-6">
								<div class="card card--list">
									<div class="row">
										<div class="col-12 col-sm-4">
											<div class="card__cover">
												<img src="{{asset('img/gallery/'~movie.icone)}}" alt="">
												<a href="#" class="card__play">
													<i class="icon ion-ios-play"></i>
												</a>
											</div>
										</div>

										<div class="col-12 col-sm-8">
											<div class="card__content">
												<h3 class="card__title"><a href="{{path('product_show',{'product_id':movie.productid})}}">{{movie.title}}</a></h3>
												<span class="card__category">
													<a href="#">{{movie.category.label}}</a>
												</span>

												<div class="card__wrap">
													<span class="card__rate"><i class="icon ion-ios-star"></i>{{random(rate)}}</span>

													<ul class="card__list">
														<li>HD</li>
														<li>16+</li>
													</ul>
												</div>

												<div class="card__description">
													<p>{{movie.description}}</p>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
						<!-- end card -->
					</div>
				</div>
			</div>
			<!-- end content tabs -->
		</div>
	</section>
	<!-- end content -->

	<!-- expected premiere -->
	<section class="section section--bg" data-bg="img/section/section.jpg">
		<div class="container">
			<div class="row">
				<!-- section title -->
				<div class="col-12">
					<h2 class="section__title">EN DEMANDE</h2>
				</div>
				<!-- end section title -->

				<!-- card -->
				{% for pfooter in pfooters %}
				<div class="col-6 col-sm-4 col-lg-3 col-xl-2">
					<div class="card">
						<div class="card__cover">
							<img src="{{asset('img/gallery/'~pfooter.icone)}}" alt="">
							<a href="#" class="card__play">
								<i class="icon ion-ios-play"></i>
							</a>
						</div>
						<div class="card__content">
							<h3 class="card__title"><a href="#">{{pfooter.title}}</a></h3>
							<span class="card__category">
								<a href="#">{{pfooter.category.label}}</a>
							</span>
							<span class="card__rate"><i class="icon ion-ios-star"></i>{{random(rate)}}</span>
						</div>
					</div>
				</div>					
				{% endfor %}
				<!-- end card -->

				<!-- section btn -->
				<div class="col-12">
					<a href="{{path('product_index')}}" class="section__btn">Voir plus</a>
				</div>
				<!-- end section btn -->
			</div>
		</div>
	</section>
	<!-- end expected premiere -->
{% endblock %}
