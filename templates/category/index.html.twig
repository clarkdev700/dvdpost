{% extends 'back.html.twig' %}

{% block title %}Liste des genres{% endblock %}
{% block ctitle %}Liste des Genres {% endblock %}
{% block content %}
    <table class="table">
        <thead>
            <tr>
               <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.categoryid }}</td>
                <td>{{ category.label }}</td>
                <td>
                    <a href="{{ path('category_show', {'category_id': category.categoryid}) }}">show</a>
                    <a href="{{ path('category_edit', {'category_id': category.categoryid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun Genre trouv&eacute;</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Nouveau</a>
{% endblock %}
